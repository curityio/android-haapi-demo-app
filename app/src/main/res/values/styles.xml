<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/app_background</item>
    </style>

    <style name="LabelTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ErrorTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/error</item>
    </style>

<!--    Text Appearance for buttons-->
    <style name="TextAppearance.ProgressButton.Primary" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextAppearance.ProgressButton.Secondary" parent="@style/TextAppearance.ProgressButton.Primary">
        <item name="android:textColor">#333333</item>
    </style>

<!--    end-->

<!--    ProgressButton style that conform to stylable ProgressButton-->
    <style name="PrimaryProgressButton" parent="">
        <item name="background">@drawable/primary_progress_btn_shape</item>
        <item name="textAppearanceButton">@style/TextAppearance.ProgressButton.Primary</item>
        <item name="tintColor">#FFFFFF</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SecondaryProgressButton">
        <item name="background">@drawable/secondary_progress_btn_shape</item>
        <item name="textAppearanceButton">@style/TextAppearance.ProgressButton.Secondary</item>
        <item name="tintColor">#333333</item>
        <item name="android:foreground">@drawable/ripple_effect</item>
    </style>
<!--    end-->
</resources>